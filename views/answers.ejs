<%- include ('./partials/navbar') %>
<div class="container">
  <div class="row">
    <div class="col-md-12 col-lg-8 m-auto">
      <%- include ('./partials/messages') %>
      <% if(puzzle){ %> 
        <div class="card">
          <%- include ('./partials/puzzleedit') %>
          <a class="text-right pb-2" href="/single/<%= puzzle.code %>">Open solving window</a>
        </div>
        <% if(typeof answers != 'undefined') { %>
        <div class="card">
          <h3 class="card-body">Answers</h3>
          <div class="card-body">
            <table class="table table-hover table-condensed">
              <tbody>
                <% answers.sort((a1,a2)=>(a1 - a2)).forEach(function(answer) { %>
                <% if (answer) { %>
                <tr>
                  <td><%= answer.date.toISOString().substr(5,14).replace('T',' ') %></td>
                  <td><%= answer.userName %></td>
                  <td><%= answer.data %></td>
                </tr>
                <% } %>
                <% }) %>
              </tbody>
            </table>
          </div>
        </div>
        <% } %>
        <script>
          $(document).ready(function () {
            showPuzzle();
          });
        </script>
      <% } %>
    </div>
  </div>
</div>
<%- include ('./partials/footer') %>

