<div class=container>
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card">
        <h1 class="card-header text-center mb-3">Register
        </h1>
        <%- include ('./partials/messages') %>
        <form class="card-body" action="/users/register" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              id="name"
              name="name"
              class="form-control"
              placeholder="Enter Name"
              value="<%= typeof name != 'undefined' ? name : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="country">Country</label>
            <input
              type="text"
              id="country"
              class="form-control"
              placeholder="Choose the country"
            />
            <input
              type="hidden"
              id="country_code"
              name="country"
              value="<%= typeof country != 'undefined' ? country : '' %>"
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <style>
           .g-recaptcha{
              position:relative;
              left: -2px;
              top: -15px;
            }
          </style>
          <div style="text-align: center;" class="form-group">
            <div style="width: 154px;height: 40px;overflow: hidden;margin: 0 auto;border-radius: 3px;">
              <%- typeof captcha != 'undefined' ? captcha : '' %>
            </div>
          </div>
          <button type="submit" class="btn btn-primary btn-block">
            Register
          </button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
</div>
<script>
  $(document).ready(function() {
    var countryData = $.fn.countrySelect.getCountryData();
    countryData.push({name: "", iso2: "-"})
    $.fn.countrySelect.setCountryData(countryData);
    $("#country").countrySelect({
      defaultCountry: "-",
      preferredCountries: [],
      responsiveDropdown:true
    });
    <% if (typeof country != 'undefined') { %>
      $("#country").countrySelect("selectCountry", "<%= country %>")
    <% } %>
  })
</script>
