<div class=container>
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card">
        <h1 class="card-header text-center mb-3">Reset password</h1>
        <%- include ('./partials/messages') %>
        <div class="card-body">
          To reset the password enter your registration email into the field below.
        </div>
        <form class="card-body" action="/users/reset" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
            />
          </div>
          <button type="submit" class="btn btn-primary btn-block">Reset</button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
        </p>
      </div>
    </div>
  </div>
</div>
