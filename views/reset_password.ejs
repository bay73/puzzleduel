<div class=container>
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card">
        <h1 class="card-header text-center mb-3">Reset password</h1>
        <%- include ('./partials/messages') %>
        <div class="card-body">
          To reset the password enter your registration email 
          <% if (typeof token != 'undefined') { %> and new password <% } %> below.
        </div>
        <form class="card-body" action="/users/reset" method="POST">
          <div class="form-group">
            <label for="email">Email</label>
            <input
              type="email"
              id="email"
              name="email"
              class="form-control"
              placeholder="Enter Email"
              value="<%= typeof email != 'undefined' ? email : '' %>"
            />
          </div>
          <% if (typeof token != 'undefined') { %>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              id="password"
              name="password"
              class="form-control"
              placeholder="Create Password"
              value="<%= typeof password != 'undefined' ? password : '' %>"
            />
          </div>
          <div class="form-group">
            <label for="password2">Confirm Password</label>
            <input
              type="password"
              id="password2"
              name="password2"
              class="form-control"
              placeholder="Confirm Password"
              value="<%= typeof password2 != 'undefined' ? password2 : '' %>"
            />
          </div>
          <input
            type="hidden"
            id="token"
            name="token"
            value="<%= token %>"
          />
          <% } else { %>
          <style>
           .g-recaptcha{
              position:relative;
              left: -2px;
              top: -15px;
            }
          </style>
          <div style="text-align: center;" class="form-group">
            <div style="width: 154px;height: 40px;overflow: hidden;margin: 0 auto;border-radius: 3px;">
              <%- typeof captcha != 'undefined' ? captcha : '' %>
            </div>
          </div>
          <% } %>
          <button type="submit" class="btn btn-primary btn-block">Reset</button>
        </form>
        <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
        </p>
      </div>
    </div>
  </div>
</div>
