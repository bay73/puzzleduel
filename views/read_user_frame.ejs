<div class="card">
  <div class="card-body">
    <table class="table">
      <tr>
        <th scope="row">
          <%= __("Name") %>
        </th>
        <td>
          <%= typeof name != 'undefined' ? name : '' %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          <%= __("Email") %>
        </th>
        <td>
          <%= typeof email != 'undefined' ? email : '' %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          <%= __("Country") %>
        </th>
        <td>
          <%= country != undefined ? country : __("Not defined") %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          <%= __("League") %>
        </th>
        <td>
          <% if (user.league != undefined && leagueSettings[user.league] != undefined) { %>
          <% let leagueDate = (new Date()).toISOString().slice(0,10) %>
          <a  style='<%= leagueSettings[user.league].mainStyle %>' href='/league/<%= user.league %>/<%= leagueDate %>'>
            <%= leagueSettings[user.league].name %>
          </a>
          <% } else { %>
          <%= __("Not in league") %>
          <% } %>
        </td>
      </tr>
      <tr>
        <th scope="row">
          <%= __("Rating") %>
        </th>
        <td>
          <%= Math.round(rating) %>
        </td>
      </tr>
    </table>
    <p class="card-text text-right pt-3">
      <a href="/users/edit"><%= __("Change user data") %></a>
    </p>
  </div>
</div>
